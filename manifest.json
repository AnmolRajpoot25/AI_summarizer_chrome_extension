{
  "manifest_version": 3,
  "name": "article summarizer",
  "version": "1.0.0",
  "permissions": ["scripting", "activeTab", "storage"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "OIP.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
